  <script>
    // Continuously floating hearts in background
    function createBackgroundHearts() {
      for (let i = 0; i < 15; i++) {
        const heart = document.createElement("div");
        heart.className = "floating-heart";
        heart.innerHTML = "ğŸ’–";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.animationDuration = (Math.random() * 5 + 5) + "s";
        heart.style.fontSize = (Math.random() * 20 + 15) + "px";
        document.body.appendChild(heart);

        setTimeout(() => {
          heart.remove();
          createBackgroundHearts(); // keep hearts floating infinitely
        }, (parseFloat(heart.style.animationDuration) * 1000));
      }
    }

    createBackgroundHearts();

    // Runaway NO button
    function runAway(button) {
      const parent = button.parentElement;
      const x = Math.random() * (parent.offsetWidth - button.offsetWidth);
      const y = Math.random() * 50; // small vertical shift
      button.style.transform = `translate(${x}px, ${y}px)`;
    }

    // YES button click
    function sayYes() {
      document.getElementById("response").classList.remove("hidden");
      createHearts();
    }

    // Extra floating hearts on YES click
    function createHearts() {
      for (let i = 0; i < 25; i++) {
        const heart = document.createElement("div");
        heart.className = "floating-heart";
        heart.innerHTML = "ğŸ’–";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.animationDuration = (Math.random() * 3 + 3) + "s";
        heart.style.fontSize = (Math.random() * 20 + 15) + "px";
        document.body.appendChild(heart);

        setTimeout(() => {
          heart.remove();
        }, (parseFloat(heart.style.animationDuration) * 1000));
      }
    }
  </script>

